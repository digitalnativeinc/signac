{
	"$schema": "http://json-schema.org/schema",
	"executors": {
		"build": {
			"implementation": "./src/executors/build/executor",
			"schema": "./src/executors/build/schema.json",
			"description": "Build a smart contract project"
		},
		"test": {
			"implementation": "./src/executors/test/executor",
			"schema": "./src/executors/test/schema.json",
			"description": "Run unit tests"
		},
		"ci": {
			"implementation": "./src/executors/ci/executor",
			"schema": "./src/executors/ci/schema.json",
			"description": "Checks if the code builds as Wasm; does not output any `<name>.contract` artifact to the target"
		},
		"clippy": {
			"implementation": "./src/executors/clippy/executor",
			"schema": "./src/executors/clippy/schema.json",
			"description": "Linter for Rust code"
		}
	}
}
