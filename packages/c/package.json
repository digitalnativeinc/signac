{
	"name": "@signac/c",
	"version": "0.0.1",
	"type": "commonjs",
  "description": "Core module for Lumen, a chain-agnostic oracle provider",
  "license": "Apache-2.0",
  "author": "Hyungsuk Kang <hskang9@gmail.com>",
  "homepage": "https://github.com/digitalnativeinc/lumen/tree/master/packages/core#readme",
  "repository": "https://github.com/digitalnativeinc/lumen/tree/master/packages/core",
  "bugs": {
    "url": "https://github.com/digitalnativeinc/lumen/issues"
  },
  "main": "./dist/index.js",
  "bin": {
    "lumen": "./dist/index.js"
  },
  "scripts": {
    "start": "npm run build && npm run global",
    "test": "npm run lint && npm run test:unit",
    "test:unit": "mocha src/**/*.spec.ts",
    "lint": "tslint -p . --fix",
    "build": "npm run clean:some && tsc -p ./tsconfig.json",
    "audit": "npm_config_yes=true npx yarn-audit-fix",
    "prepare": "yarn build",
    "global": "npm i -g && lumen run",
    "clean:some": "rm -rf ./dist ./docs",
    "clean:all": "rm -rf ./node_modules ./package-lock.json ./dist ./docs",
    "refresh": "npm run clean:all && npm install",
    "tscov": "tscov --min-coverage 90",
    "tscov:d": "tscov --details",
    "publish-package": "npm run build && npm publish",
    "docs": "typedoc --out docs ./src"
  },
  "keywords": [
    "cli",
    "oracle",
    "middleware"
  ],
  "dependencies": {
    "@digitalnative/lumen-client": "^0.4.16",
    "@digitalnative/lumen-hunt": "^0.4.17",
    "@digitalnative/lumen-targets": "^0.4.13",
    "@digitalnative/type-definitions": "latest",
    "@liftr/tscov": "^1.4.7",
    "@polkadot/api": "^5.0.1",
    "@polkadot/types": "^5.0.1",
    "@polkadot/types-known": "^5.0.1",
    "@polkadot/util": "^7.0.1",
    "@polkadot/util-crypto": "^7.0.1",
    "@types/figlet": "^1.2.0",
    "@types/fs-extra": "^9.0.1",
    "@types/inquirer": "^6.5.0",
    "@types/node": "^14.0.14",
    "chalk": "^4.1.0",
    "clear": "^0.1.0",
    "commander": "^5.1.0",
    "config": "^3.3.1",
    "figlet": "^1.4.0",
    "fs-extra": "^9.0.1",
    "inquirer": "^7.3.3",
    "inversify": "^5.0.1",
    "kleur": "^4.0.2",
    "nodemon": "^2.0.4",
    "path": "^0.12.7",
    "readline": "^1.3.0",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.19",
    "string-similarity": "^4.0.2",
    "tslib": "^2.0.0",
    "typescript": "4.3.5",
    "util": "^0.12.3"
  },
  "devDependencies": {
    "@liftr/tscov": "^1.4.7",
    "@types/bluebird": "^3.5.32",
    "@types/chai": "^4.2.11",
    "@types/figlet": "^1.2.0",
    "@types/fs-extra": "^9.0.1",
    "@types/inquirer": "^6.5.0",
    "@types/node": "^14.0.14",
    "@types/sinon": "^9.0.0",
    "@types/sinon-chai": "^3.2.4",
    "@types/string-similarity": "^3.0.0",
    "bluebird": "^3.7.2",
    "chai": "^4.0.0",
    "nyc": "^15.0.1",
    "sinon": "^9.0.1",
    "sinon-chai": "^3.5.0",
    "ts-node": "^8.10.2",
    "tslint": "^6.1.2",
    "typedoc": "^0.17.7",
    "typescript": "4.3.5"
  },
  "publishConfig": {
    "access": "public"
  }
}
