{
	"compileOnSave": false,
	"compilerOptions": {
		"rootDir": ".",
		"sourceMap": true,
		"declaration": true,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"target": "es2015",
		"module": "esnext",
		"lib": ["es2017", "dom"],
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"baseUrl": ".",
		"strictNullChecks": true,
		"paths": {
			"@signac/c": ["packages/c/src/index.ts"],
			"@signac/hello-tsc": ["packages/hello-tsc/src/index.ts"],
			"@signac/hello-tsc2": ["packages/hello-tsc2/src/index.ts"],
			"nxink": ["packages/nxink/src/index.ts"]
		}
	},
	"exclude": ["node_modules", "tmp"]
}
